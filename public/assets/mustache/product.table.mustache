<!--PRODUCTS-->

<table>
    <thead>
        <tr>
            <th>#</th>
            <th>title</th>
            <th>store</th>
            <th>in_stock</th>
            <th>price</th>
            <th>weight</th>
            <th>width</th>
            <th>depth</th>
            <th>edit</th>
            <th>delete</th>
        </tr>
    </thead>
    <tbody>

{{#products}}

<tr id="record-1" class="record">
    <td class="checkbox"><input type="checkbox" class="checkthis" /></td>
    <td class="title">{{title}}</td>
    <td class="store">{{store}}</td>
    <td class="in_stock">{{in_stock}}</td>
    <td class="price">{{price}}</td>
    <td class="weigth">{{weigth}}</td>
    <td class="width">{{width}}</td>
    <td class="depth">{{depth}}</td>
    <td class="edit">
        <p data-placement="top" data-toggle="tooltip" title="Edit">
            <button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" >
                <span class="glyphicon glyphicon-pencil"></span>
            </button>
        </p>
    </td>
    <td class="delete">
        <p data-placement="top" data-toggle="tooltip" title="Delete">
            <button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" >
                <span class="glyphicon glyphicon-trash"></span>
            </button>
        </p>
    </td>
</tr>

{{/products}}

    </tbody>
</table>
